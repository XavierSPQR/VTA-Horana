<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/crelative">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="120dp"
            android:layout_height="165dp"
            android:id="@+id/imgviewCourseImage"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="center"
            />

        <TextView
            android:id="@+id/txtCourseName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/imgviewCourseImage"
            android:text="Course Name Course Name Course Name"
            android:textColor="@color/lavender"
            android:maxLines="2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@color/vtared"
            />

        <TextView
            android:id="@+id/txtDuration"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/txtCourseName"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/txtNvqLevel"
            android:text="18 months"
            android:textAlignment="center"
            android:layout_marginEnd="10dp"
            android:textColor="@color/lavender"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/txtNvqLevel"
            android:text="Nvq Level vv"
            android:textColor="@color/lavender"
            android:layout_toEndOf="@id/imgviewCourseImage"
            android:layout_below="@id/txtCourseName"
            android:layout_marginStart="15dp"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:id="@+id/txtFee"
            android:text="Course Fee"
            android:textColor="@color/lavender"

            android:layout_toEndOf="@id/imgviewCourseImage"
            android:layout_below="@id/txtType"
            android:layout_marginStart="15dp"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/txtType"
            android:text="Typel"
            android:textColor="@color/lavender"

            android:layout_toEndOf="@id/imgviewCourseImage"
            android:layout_below="@id/txtNvqLevel"
            android:layout_marginStart="15dp"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>