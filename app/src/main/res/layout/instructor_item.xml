<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/insCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="120dp"
            android:layout_height="165dp"
            android:id="@+id/imgviewCourseImage"
            android:src="@drawable/uploadimg"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="center"
            />

        <TextView
            android:id="@+id/txtInsName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/imgviewCourseImage"
            android:text="Instructor Name Instructor Name"
            android:textColor="@color/lavender"
            android:maxLines="2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@color/vtared"
            />

        <TextView
            android:id="@+id/txtInsCourse"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@id/imgviewCourseImage"
            android:layout_below="@id/txtInsName"
            android:text="Course Name Course Name Course Name"
            android:textColor="@color/lavender"
            android:maxLines="2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@color/vtared"
            />








    </RelativeLayout>

</androidx.cardview.widget.CardView>